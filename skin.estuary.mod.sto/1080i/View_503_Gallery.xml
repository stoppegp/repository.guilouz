<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_503_Gallery">
        <control type="group">
            <visible>Control.IsVisible(503)</visible>
            <include>Visible_Right</include>
            <include>OpenClose_Right</include>
            <top>180</top>
            <left>20</left>
            <right>20</right>
            <height>700</height>
            <include content="View_Gallery">
                <param name="id" value="503" />
                <param name="condition" value="Container.Content(sets) | Container.Content(episodes) | Container.Content(seasons) | Container.Content(tvshows) | Container.Content(movies)" />
            </include>
        </control>
    </include>
    <include name="View_Gallery">
        <control type="group">
            <control type="fixedlist" id="$PARAM[id]">
                <top>0</top>
                <left>-88</left>
                <width>2736</width>
                <height>700</height>
                <onleft>$PARAM[id]</onleft>
                <onright>$PARAM[id]</onright>
                <ondown>5199</ondown>
                <onup condition="!Skin.HasSetting(KioskMode)">9000</onup>
                <pagecontrol>5199</pagecontrol>
                <focusposition>5</focusposition>
                <movement>4</movement>
                <preloaditems>2</preloaditems>
                <orientation>horizontal</orientation>
                <viewtype label="$LOCALIZE[40094]">bigwide</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <visible>$PARAM[condition]</visible>
                <itemlayout height="700" width="88">
                    <control type="group">
                        <left>0</left>
                        <right>10</right>
                        <control type="image">
                            <left>0</left>
                            <right>0</right>
                            <top>0</top>
                            <bottom>0</bottom>
                            <texture>dialogs/back.png</texture>
                        </control>
                        <control type="label">
                            <aligny>center</aligny>
                            <top>630</top>
                            <height>75</height>
                            <width>590</width>
                            <animation effect="rotate" end="90" start="0" condition="true" center="20,650">Conditional</animation>
                            <label>$INFO[ListItem.Label]</label>
                            <align>left</align>
                        </control>
                        <control type="image">
                            <centerleft>50%</centerleft>
                            <top>20</top>
                            <height>48</height>
                            <width>48</width>
                            <texture>$VAR[ListWatchedIconVar]</texture>>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="700" width="1186">
                    <control type="button">
							<onfocus>SetProperty(infoposter,$INFO[Container.ListItem.Art(poster)],home)</onfocus>
							<onfocus>SetProperty(infologo,$INFO[Container.ListItem.Art(clearlogo)],home)</onfocus>
							<onfocus>SetProperty(infologotv,$INFO[Container.ListItem.Art(tvshow.clearlogo)],home)</onfocus>
							<onfocus>SetProperty(infofanart,$INFO[Container.ListItem.Art(fanart)],home)</onfocus>
							<onfocus>SetProperty(infobanner,$INFO[Container.ListItem.Art(banner)],home)</onfocus>
							<onfocus>SetProperty(infobannertv,$INFO[Container.ListItem.Art(tvshow.banner)],home)</onfocus>
							<texturenofocus></texturenofocus>
							<texturefocus></texturefocus>
						</control>
                    <include>View_Gallery_Fanart</include>
                    <include>View_Gallery_Info</include>
                </focusedlayout>
            </control>
        </control>
    </include>
    <include name="View_Gallery_Fanart">
        <control type="group">
            <top>0</top>
            <left>0</left>
            <right>10</right>
            <height>100%</height>
            <control type="image">
                <width>100%</width>
                <height>100%</height>
                <texture>dialogs/back.png</texture>
            </control>
            <control type="image">
                <left>10</left>
                <right>10</right>
                <top>10</top>
                <bottom>10</bottom>
                <fadetime>200</fadetime>
                <aspectratio>stretch</aspectratio>
                <texture background="true" fallback="DefaultVideoFanart.png">$VAR[FanartImageVar]</texture>
                <visible>!Container.Content(episodes)</visible>
            </control>
            <control type="image">
                <left>10</left>
                <right>10</right>
                <top>10</top>
                <bottom>10</bottom>
                <fadetime>200</fadetime>
                <aspectratio>stretch</aspectratio>
                <texture background="true" fallback="DefaultVideoFanart.png">$INFO[ListItem.Art(thumb)]</texture>
                <visible>Container.Content(episodes)</visible>
            </control>
        </control>
    </include>
    <include name="View_Gallery_Info">
        <control type="group">
            <left>10</left>
            <right>20</right>
            <bottom>15</bottom>
            <height>122</height>
            <control type="image">
                <width>100%</width>
                <height>120</height>
                <bottom>-5</bottom>
                <texture>dialogs/back.png</texture>
            </control>
            <control type="label">
                <left>20</left>
                <right>20</right>
                <top>10</top>
                <height>32</height>
                <label>[B]$INFO[ListItem.Label][/B]</label>
            </control>
            <control type="label">
                <left>20</left>
                <right>20</right>
                <top>10</top>
                <height>32</height>
                <align>right</align>
                <label>$INFO[ListItem.Year]</label>
                <textcolor>$VAR[SkinColorVar]</textcolor>
                <visible>Container.Content(movies)</visible>
            </control>
            <control type="label">
                <left>20</left>
                <right>20</right>
                <top>10</top>
                <height>32</height>
                <align>right</align>
                <label>$INFO[ListItem.Property(TotalEpisodes),, $LOCALIZE[20453]]</label>
                <textcolor>$VAR[SkinColorVar]</textcolor>
                <visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
            </control>
            <control type="label">
                <left>20</left>
                <right>20</right>
                <top>10</top>
                <height>32</height>
                <align>right</align>
                <label>$LOCALIZE[40092] $INFO[ListItem.Premiered]</label>
                <textcolor>$VAR[SkinColorVar]</textcolor>
                <visible>Container.Content(episodes)</visible>
            </control>
            <control type="textbox">
                <left>20</left>
                <width>1116</width>
                <bottom>5</bottom>
                <height>67</height>
                <align>justify</align>
                <font>font12</font>
                <label>$INFO[ListItem.Plot]</label>
                <autoscroll delay="7000" time="4000" repeat="10000">Skin.HasSetting(autoscroll)</autoscroll>
                <visible>!ListItem.IsCollection</visible>
            </control>
            <control type="textbox">
                <left>20</left>
                <width>1116</width>
                <bottom>5</bottom>
                <height>67</height>
                <align>justify</align>
                <font>font12</font>
                <label>$INFO[Window(Home).Property(SkinHelper.MovieSet.ExtendedPlot)]</label>
                <autoscroll delay="7000" time="4000" repeat="10000">Skin.HasSetting(autoscroll)</autoscroll>
                <visible>ListItem.IsCollection</visible>
            </control>
        </control>
    </include>
</includes>