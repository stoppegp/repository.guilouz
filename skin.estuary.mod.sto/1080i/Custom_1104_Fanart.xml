<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1104">
	<defaultcontrol always="true">3000</defaultcontrol>
	<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
	<controls>
		<control type="image">
			<include>FullScreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<texture>colors/black.png</texture>
		</control>
		<control type="image">
			<include>FullScreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<texture>$VAR[InfoFanartVar]</texture>
			<visible>String.IsEmpty(Window(Home).Property(SkinHelper.ExtraFanArtPath))</visible>
		</control>
		<control type="multiimage">
 			<include>FullScreenDimensions</include>
 			<aspectratio>scale</aspectratio>
 			<fadetime>400</fadetime>
            <imagepath>$INFO[Window(Home).Property(SkinHelper.ExtraFanArtPath)]</imagepath>
            <timeperimage>3000</timeperimage>
            <randomize>true</randomize>
            <visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ExtraFanArtPath))</visible>
        </control>
        <control type="group">
        	<visible>!Container.Content(videos)</visible>
        <control type="image">
			<include>FullScreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<texture>$VAR[InfoFanartVar]</texture>
			<visible>!Skin.HasSetting(SkinHelper.EnableMusicExtraFanart)</visible>
		</control>
        <control type="multiimage">
 			<include>FullScreenDimensions</include>
 			<aspectratio>scale</aspectratio>
 			<fadetime>400</fadetime>
            <imagepath>$INFO[Window(Home).Property(SkinHelper.Music.ExtraFanArt)]</imagepath>
            <timeperimage>3000</timeperimage>
            <randomize>true</randomize>
            <visible>!String.IsEmpty(Window(Home).Property(SkinHelper.Music.ExtraFanArt))</visible>
            <visible>Skin.HasSetting(SkinHelper.EnableMusicExtraFanart)</visible>
        </control>
        </control>
		<control type="button" id="3000">
			<include>HiddenObject</include>
			<onclick>Action(close)</onclick>
		</control>
	</controls>
</window>