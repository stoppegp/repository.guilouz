<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_506_Mosaic">
		<include content="UpDownArrows">
			<param name="container_id" value="506" />
			<param name="up_posy">104</param>
			<param name="down_posy">936</param>
			<param name="visible" value="!System.HasModalDialog" />
		</include>
		<control type="group">
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(506)</visible>
			<include>Visible_Right</include>
			<left>60</left>
			<top>172</top>
			<control type="panel" id="506">
				<width>1800</width>
				<height>720</height>
				<onleft condition="!Skin.HasSetting(KioskMode)">9000</onleft>
				<onright>531</onright>
				<onup>506</onup>
				<ondown>506</ondown>
				<viewtype label="40242">icon</viewtype>
				<preloaditems>2</preloaditems>
				<pagecontrol>531</pagecontrol>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<visible>Container.Content(images)</visible>
				<itemlayout height="144" width="225" condition="Container.Content(images) + Skin.HasSetting(hide_pictureinfo)">
					<control type="image">
						<width>100%</width>
						<height>100%</height>
						<texture fallback="DefaultFolderSquare.png" background="true">$VAR[ShiftThumbVar]</texture>
						<aspectratio>scale</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="144" width="225" condition="Container.Content(images) + Skin.HasSetting(hide_pictureinfo)">
					<control type="group">
						<animation effect="zoom" time="300" tween="sine" easing="inout" start="100" end="140" center="auto">Focus</animation>
						<control type="image">
							<width>100%</width>
							<height>100%</height>
							<texture fallback="DefaultFolderSquare.png" background="true">$VAR[ShiftThumbVar]</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>100%</width>
							<height>100%</height>
							<texture border="8" colordiffuse="$VAR[SkinColorVar]">buttons/thumbnail_focused.png</texture>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>